
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>controller</servlet-name>
    <servlet-class>app.servlets.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>


  <context-param>
    <description>Location to store uploaded files</description>
    <param-name>file-upload</param-name>
    <param-value>
      C:\apache-tomcat-9.0.65\webapps\EPAM_servlet\files\
    </param-value>
  </context-param>


  <error-page>
    <error-code>404</error-code>
    <location>/controller?action=error&amp;code=404&amp;Request not found</location>
  </error-page>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/controller?action=error&amp;code=500&amp;Server error</location>
  </error-page>

